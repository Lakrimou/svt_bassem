                        <br/>
                        <h1>Classes list</h1>

                        <table class="table table-responsive table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom de la classe</th>
                                <th>Description</th>
                                <th>Date de creation</th>
                                <th>Image de la classe</th>
                                {#<th>Imgaltclasse</th>#}
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for classe in classes %}
                                <tr>
                                    <td><a href="{{ path('admin_show', { 'id': classe.id }) }}">{{ classe.id }}</a></td>
                                    <td>{{ classe.name }}</td>
                                    <td>{{ classe.description }}</td>
                                    <td>{% if classe.dateCreationClasse %}{{ classe.dateCreationClasse|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{{ classe.imgClasse }}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('admin_show', { 'id': classe.id }) }}">show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('admin_edit', { 'id': classe.id }) }}">edit</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <ul>
                            <li>
                                <a href="{{ path('admin_new') }}">Create a new classe</a>
                            </li>
                        </ul>
                        <footer>
