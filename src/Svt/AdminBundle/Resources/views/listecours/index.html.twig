{% extends '::layoutAdmin.html.twig' %}
{% block stylesheetJavascript %}
    <script src="{{ asset('js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="https://cdn.ckeditor.com/4.7.1/standard/ckeditor.js"></script>
    <script>
        // Replace the <textarea id="editor1"> with a CKEditor
        // instance, using default configuration.
        CKEDITOR.replace( 'editor1' );
    </script>
{% endblock %}
{% block body %}
<!-- Marketing messaging and featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->
<section id="content">

    <div class="page page-forms-wizard">

        <div class="pageheader">

            <h2>Gestion des cours <span>// ajout modification et suppression des cours</span></h2>

            <div class="page-bar">

                <ul class="page-breadcrumb">
                    <li>
                        <a href="index.html"><i class="fa fa-home"></i> Svt Bassem</a>
                    </li>
                </ul>

            </div>

        </div>
        <section class="tile">
            <div class="row" style="padding: 15px;">
                <div class="col-lg-12">
                    <h2 class="text-center">Administration : <strong>Liste des cours</strong></h2>
                    <br/>
    <h1>Liste des cours</h1>

    <table class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomcours</th>
                <th>Datecreationcours</th>
                <th>Autheurcours</th>
                <th>Pdfurlcours</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for listeCour in listeCours %}
            <tr>
                <td><a href="{{ path('listecours_show', { 'id': listeCour.id }) }}">{{ listeCour.id }}</a></td>
                <td>{{ listeCour.nomCours }}</td>
                <td>{% if listeCour.dateCreationCours %}{{ listeCour.dateCreationCours|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ listeCour.autheurCours }}</td>
                <td>{{ listeCour.pdfUrlCours }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('listecours_show', { 'id': listeCour.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('listecours_edit', { 'id': listeCour.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('listecours_new') }}">Create a new listeCour</a>
        </li>
    </ul></div></div></section></div></section>
{% endblock %}
