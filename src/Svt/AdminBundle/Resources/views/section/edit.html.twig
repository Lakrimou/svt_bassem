{% extends '::layoutAdmin.html.twig' %}
{% block stylesheetJavascript %}
    <script src="{{ asset('js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->
    <section id="content">

        <div class="page page-forms-wizard">

            <div class="pageheader">

                <h2>Gestion des sections <span>// ajout modification et suppression des sections</span></h2>

                <div class="page-bar">

                    <ul class="page-breadcrumb">
                        <li>
                            <a href="index.html"><i class="fa fa-home"></i> Svt Bassem</a>
                        </li>
                    </ul>

                </div>

            </div>
            <section class="tile">
                <div class="row" style="padding: 15px;">
                    <div class="col-lg-12">
                        <h2 class="text-center">Administration : <strong>Modifer cette section</strong></h2>
                        <br/>
                        <h1>Modifier la section</h1>

                        {{ form_start(edit_form) }}
                        {{ form_widget(edit_form) }}
                        <input type="submit" value="Editer" class="btn btn-primary btn-lg"/>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-xs-12 col-lg-4">
                        <a href="{{ path('admin_section_index') }}" class="btn btn-success"><i class="fa fa-backward"></i> Retour Ã  la liste</a>
                    </div>
                    <div class="col-md-6 col-sm-12 col-xs-12 col-lg-4">
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Delete" class="btn btn-danger">
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </section>
        </div>
    </section>
{% endblock %}
