{% extends '::layoutAdmin.html.twig' %}
{% block stylesheetJavascript %}
    <script src="{{ asset('js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->
    <section id="content">

        <div class="page page-forms-wizard">

            <div class="pageheader">

                <h2>Gestion des sections <span>// ajout modification et suppression des sections</span></h2>

                <div class="page-bar">

                    <ul class="page-breadcrumb">
                        <li>
                            <a href="index.html"><i class="fa fa-home"></i> Svt Bassem</a>
                        </li>
                    </ul>

                </div>

            </div>
            <section class="tile">
                <div class="row" style="padding: 15px;">
                    <div class="col-lg-12">
                        <h2 class="text-center">Administration : <strong>Détails de section</strong></h2>
                        <br/>
                        <h1>Section</h1>

                        <table class="table table-bordered table-responsive table-striped">
                            <tbody>
                            <tr>
                                <th>Identifiant</th>
                                <td>{{ section.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom de la section</th>
                                <td>{{ section.name }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ section.description }}</td>
                            </tr>
                            <tr>
                                <th>Date de création</th>
                                <td>{% if section.date %}{{ section.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Image de la section</th>
                                <td>{{ section.imgSection }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <br><br>
                        <div class="row">
                            <div class="col-md-4 col-sm-12 col-xs-12">
                                <a href="{{ path('admin_section_index') }}" class="btn btn-primary"><i class="fa fa-backward"></i> Retour à la liste</a>
                            </div>
                            <div class="col-md-4 text-center col-sm-12 col-xs-12">
                                <a href="{{ path('admin_section_edit', { 'id': section.id }) }}" class="btn btn-success">Modifier</a>
                            </div>
                            <div class="col-md-4 text-right col-sm-12 col-xs-12">
                                {{ form_start(delete_form) }}
                                <input type="submit" value="Supprimer" class="btn btn-danger">
                                {{ form_end(delete_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
{% endblock %}
